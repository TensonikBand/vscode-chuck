{
    "name": "chuck",
    "displayName": "ChucK",
    "description": "Syntax highlighting for the ChucK langauge (http://chuck.cs.princeton.edu/)",
    "version": "0.0.2",
    "publisher": "forrcaho",
    "author": {
        "name": "Forrest Cahoon"
    },
    "license": "MIT",
    "homepage": "https://github.com/forrcaho/vscode-chuck",
    "repository": {
        "type": "git",
        "url": "https://github.com/forrcaho/vscode-chuck"
    },
    "bugs": {
        "url": "https://github.com/forrcaho/vscode-chuck/issues"
    },
    "icon": "chuck.png",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:chuck"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "chuck",
                "aliases": [
                    "ChucK",
                    "chuck"
                ],
                "extensions": [
                    ".ck"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "chuck",
                "scopeName": "source.chuck",
                "path": "./syntaxes/chuck.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "tslint": "^5.12.1",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    }
}
